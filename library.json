{
    "name": "usb_composite",
    "version": "3.1.1",
    "description": "Plug-and-play USB Composite Device (CDC + MSC + SDMMC) для STM32H7. Virtual COM Port, Mass Storage и встроенная поддержка SD карт на базе TinyUSB.",
    "keywords": "usb, cdc, msc, sdmmc, sd-card, tinyusb, stm32h7, stm32, composite, virtual-com-port, mass-storage",
    "authors": [
        {
            "name": "OkoDev"
        }
    ],
    "license": "MIT",
    "frameworks": "stm32cube",
    "platforms": "ststm32",
    "dependencies": {
        "tinyusb": "https://github.com/hathach/tinyusb/archive/refs/tags/0.16.0.zip"
    },
    "build": {
        "srcDir": "src",
        "includeDir": "include",
        "extraIncludes": [
            "libs/ports/include",
            "libs/domain/include"
        ],
        "flags": [
            "-Wno-unused-parameter",
            "-I libs/ports/include",
            "-I libs/domain/include"
        ]
    },
    "export": {
        "include": [
            "include/*",
            "libs/*",
            "linker/*",
            "src/*",
            "docs/*"
        ]
    }
}
